        </uap:DefaultTile>
      </uap:VisualElements>
      <Extensions>
        <desktop:Extension Category="windows.fullTrustProcess" Executable="ShareX\ShareX.exe">
          <desktop:FullTrustProcess>
            <desktop:ParameterGroup GroupId="ShareByJson" Parameters="-sharebyjson" />
          </desktop:FullTrustProcess>
        </desktop:Extension>
        <desktop:Extension Category="windows.startupTask" Executable="ShareX\ShareX.exe" EntryPoint="Windows.FullTrustApplication">
